| tablero modJuego minigame atacante defensor games vencedor decision primero segundo |

games := Game new.
tablero := Tablero new.

"Mostrar las opciones en el transcript"

modJuego := tablero modoEntrada: 1 input: (UIManager default request: 'Ingrese el modo de juego a jugar').

tablero cantJugadores: modJuego.

1 to: (tablero cantJugadores) do: [ :c|
	
	"Mostrar minijuegos a elegir en el transcript"
	minigame := tablero modoEntrada: 2 input:(UIManager default request: 'Ingrese el mini juego con el que desea empezar').

	tablero inicializarJugador: (UIManager default request: 'Ingrese su nickname') minijuego: minigame tablero: tablero numero: c
	 ].

tablero sumarRonda.
decision := false.

"Metodo actualizar mapa"
[ (tablero ronda) ~= ((tablero cantJugadores) - 2) ] whileTrue: [
	
	(decision) ifFalse: [ atacante:= tablero tirarDadoJugador.] ifTrue: [ 
		atacante := vencedor.
		 ].
	tablero procedimientoLucha: atacante objGame: games.
	tablero sumarRonda.
	"Metodo actualizar mapa"
	(((tablero ronda) \\ (tablero dueloExtra))= 0) ifTrue: [
		primero := tablero jugadorConMasTerreno.
		segundo := primero elegirRivalDueloExtra: tablero.
		tablero procedimientoDueloExtra: primero defensor: defensor objgame: games.
		].
	"Metodo actualizar mapa"
	decision := true."Metodo que devuelva True si quiere elegir otro rival sino false"		
	].

"Metodo Duelo final"

"Metodo mostrar resultados finales"
