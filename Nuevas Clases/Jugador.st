t request: 'Ingrese el contrincante elegido: ') asInteger.[(ingreso isNil) or: (ingreso >= (contrincantes size))] whileTrue: [ 	ingreso:= (UIManager default request: 'Error, vuelva a intentarlo. Ingrese el contrincante elegido') asInteger.		].salida := contrincantes at: ingreso.^salida.! !!Jugador methodsFor: 'as yet unclassified' stamp: '11/9/2024 00:32'!contrincantes: posicion dim: dimension tablero: tablero	"Genero la primera lista de contrincantes"| filaC colC nuevoCasi |filaC := posicion fila.colC := posicion columna."Izquierda"(filaC - 1) > (0) ifTrue: [ 		nuevoCasi := Casillero new.	nuevoCasi fila: (filaC - 1).	nuevoCasi columna: colC.	(tablero listaJugadores) do: [ :j|		(j territorio) do: [ :t|				(nuevoCasi = t) ifTrue: [ contrincantes add: j ]			 ].		 ].		]."Derecha"(filaC + 1) <= (dimension) ifTrue: [ 		nuevoCasi := Casillero new.	nuevoCasi fila: (filaC + 1).	nuevoCasi columna: colC.	(tablero listaJugadores) do: [ :j|		(j territorio) do: [ :t|				(nuevoCasi = t) ifTrue: [ contrincantes add: j ]			 ].		 ].		]."Abajo"(colC - 1) > (0) ifTrue: [ 		nuevoCasi := Casillero new.	nuevoCasi fila: filaC.	nuevoCasi columna: (colC - 1).	(tablero listaJugadores) do: [ :j|		(j territorio) do: [ :t|				(nuevoCasi = t) ifTrue: [ contrincantes add: j ]			 ].		 ].		]."Arriba"(colC + 1) <= (dimension) ifTrue: [ 		nuevoCasi := Casillero new.	nuevoCasi fila: filaC.	nuevoCasi columna: (colC + 1).	(tablero listaJugadores) do: [ :j|		(j territorio) do: [ :t|				(nuevoCasi = t) ifTrue: [ contrincantes add: j ]			 ].		 ].		].! !!Jugador methodsFor: 'accessing' stamp: '11/8/2024 19:07'!territorio	"Getter de territorio"^territorio! !!Jugador methodsFor: 'accessing' stamp: '11/8/2024 19:07'!vidas	"Getter de vidas"^vidas! !!Jugador methodsFor: 'accessing' stamp: '11/8/2024 19:07'!contrincantes	"Getter de Contrincantes"^contrincantes.! !!Jugador methodsFor: 'accessing' stamp: '11/8/2024 19:08'!miniJue