|opciones codigo1 codigo2 jugador1 jugador2 aciertos1 aciertos2 acerto1 acerto2 rta1 rta2 intentos1 intentos2 numAcertados1 numAcertados2 empate pos|
acerto1:= false.
acerto2:= false.
aciertos1:=0.
aciertos2:=0.
intentos1:=1.
intentos2:=1.
numAcertados1:=''.
numAcertados2:= ''.

Transcript clear.
Transcript show: 'Turno jugador 1'; cr.
Transcript show: 'El juego terminará cuando ambos jugadores adivinen el código secreto'; cr.
Transcript show: 'El jugador con menos intentos realizados será el ganador'; cr.
UIManager default request: 'Presione ENTER cuando esté listo'.



[ acerto1 not ] whileTrue: [

   "GENERO CODIGO"
   Transcript clear.
   Transcript show: 'Jugador ', jugador2 asString, ' ingrese el código que debe adivinar el jugador ', jugador1 asString.
   
	opciones:= (UIManager default chooseFrom: #('Ingresar código por teclado' 'Generar un código random') message: 'SELECCIONE UNA OPCIÓN'  title: 'EL CODIGO SECRETO' ).
     (opciones = 1) ifTrue: [ codigo1:= (UIManager default request:'Ingrese un código de 4 digitos').
	  [(codigo1 size) = 4] whileFalse:[codigo1:= (UIManager default request:'Respete el formato, ingrese un código de 4 digitos')]. 
	   ]
               ifFalse:[codigo:= (1000 to: 9999) atRandom. 
	].
   [ aciertos1 = 4 ] whileFalse:[
	rta1:= (UIManager default request:'ADIVINE EL CODIGO').
	pos:=0.
	codigo1 do:[:c|
		pos:= pos+1.
		(c = (rta1 at: pos)) ifTrue: [ aciertos1:= aciertos1 + 1 ].
		].
	  
		(aciertos1=4) ifFalse: [ Transcript show: 'Hay ', (aciertos1 asString), ' números correctos';cr.
		aciertos1:=0.
		intentos1:= intentos1 + 1.
		] 
	                ifTrue: [Transcript show: 'FELICIDADES ha adivinado el codigo en ', (intentos1 asString), ' intento/s';cr.
						acerto1:= true.
		].
	].
].
